<!DOCTYPE html>
<html lang="da">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Ny patient-kode</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #fafafa;
      margin: 0;
      padding: 2rem;
      display: flex;
      justify-content: center;
    }
    .container {
      background: #fff;
      padding: 2rem;
      border-radius: 0.5rem;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      max-width: 500px;
      width: 100%;
      text-align: center;
    }
    h1 {
      margin-top: 0;
    }
    .code {
      margin: 1.5rem 0;
      padding: 1rem;
      background: #e8e7f6;
      font-family: monospace;
      font-size: 1.2rem;
      letter-spacing: 0.1rem;
      user-select: all;
      border-radius: 0.25rem;
    }
    button {
      padding: 0.5rem 1rem;
      border: none;
      background: #f5b7b1;
      color: #333;
      border-radius: 2rem;
      cursor: pointer;
      transition: background 0.2s ease;
      font-size: 1rem;
    }
    button:hover {
      background: #e5989b;
    }
    a {
      display: block;
      margin-top: 1rem;
      color: #0077cc;
      text-decoration: none;
    }
    a:hover {
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Ny patient-kode</h1>
    <p>Kopiér og del denne 25-tegns-kode med din patient:</p>
    <div class="code" id="code"><%= code %></div>
    <button onclick="copyCode()">Kopier kode</button>
    <a href="/psychologist">← Tilbage til dashboard</a>
  </div>

  <script>
    function copyCode() {
      const codeEl = document.getElementById('code');
      const text = codeEl.textContent.trim();

      // Moderne metode (kræver secure context)
      if (navigator.clipboard && window.isSecureContext) {
        navigator.clipboard.writeText(text)
          .then(() => alert('Koden er kopieret!'))
          .catch(() => fallbackCopy(text));
      } else {
        // Fallback til execCommand
        fallbackCopy(text);
      }
    }

    function fallbackCopy(text) {
      const textarea = document.createElement('textarea');
      textarea.value = text;
      textarea.setAttribute('readonly', '');
      textarea.style.position = 'absolute';
      textarea.style.left = '-9999px';
      document.body.appendChild(textarea);

      const selected = document.getSelection().rangeCount > 0
        ? document.getSelection().getRangeAt(0)
        : false;

      textarea.select();
      try {
        document.execCommand('copy');
        alert('Koden er kopieret via fallback!');
      } catch (err) {
        alert('Kunne ikke kopiere koden');
      }

      document.body.removeChild(textarea);
      if (selected) {
        document.getSelection().removeAllRanges();
        document.getSelection().addRange(selected);
      }
    }
  </script>
</body>
</html>
